1 early() {
    sim.setValue("seed0", getSeed());
    sim.setValue("reseed_n", 0);
    sim.setValue("ckpt", tempdir() + "before_selection." + getSeed() + ".txt");
    sim.addSubpop("p1", 10000); 
}

200001 early() {
    sim.addSubpopSplit("p2", 10000, p1);
}

201000 late() {
    sim.outputFull(sim.getValue("ckpt"));    
    target = sample(p1.genomes, 1);
    target.addNewDrawnMutation(m2, 19999);
}

201000:214400 late() {
    mut = sim.mutationsOfType(m2);
    if (size(mut) == 0) {
        cat(getSeed() + ": The beneficial allele is LOST in the source population – RESTARTING\n");
        sim.readFromPopulationFile(sim.getValue("ckpt"));
        setSeed(nextSeed());
        target = sample(p1.genomes, 1);
        target.addNewDrawnMutation(m2, 19999);
    }
}

214400 late() {
    mut = sim.mutationsOfType(m2);
    mut_frq = sim.mutationFrequencies(p1, mut);
    if (size(mut) != 0) {
        if (mut_frq != 1.0) {
            cat(getSeed() + ": The beneficial allele is NOT FIXED in the source population – RESTARTING\n");
            sim.readFromPopulationFile(sim.getValue("ckpt"));
            setSeed(nextSeed());
            target = sample(p1.genomes, 1);
            target.addNewDrawnMutation(m2, 19999);
        }
    }
}

212001 early() {
    sim.addSubpopSplit("p3", 10000, p2);
}

