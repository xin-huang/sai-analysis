function (integer) nextSeed(void) {
    base = sim.getValue("seed0");
    i    = sim.getValue("reseed_n") + 1;
    new  = asInteger((base + i * 1315423911) % asInteger(2^62));
    sim.setValue("reseed_n", i);
    return new;
}

